            #define WC11 &thb LSHFT WBSPC
            #define WC12 &hm LC(LS(LALT)) SPACE
            #define WC8 &thb2 ARROWS_L ESC
            #define WC9 &thb2 SYMBOLS_L SPACE
            #define WC13 &thb2 NUMBERS_L DEL


			label = "DEF";
                       bindings = <
// ╭─────────────┬─────────────┬─────────────┬─────────────┬─────────────┬─────────────╮   ╭─────────────┬─────────────┬─────────────┬─────────────┬─────────────┬─────────────╮
     &kp WNB_SQT       &kp Q          &kp W           &kp F      &kp P           &kp WB           &kp J           &kp L           &kp U       &kp Y       &kp  SEMI    &kp LBKT
// ├─────────────┼─────────────┼─────────────┼─────────────┼─────────────┼─────────────┤   ├─────────────┼─────────────┼─────────────┼─────────────┼─────────────┼─────────────┤
       &kp TAB          WB13         WB14             WB15         WB16             &kp G            &kp M          WB19           WB20           WB21          WB22         &kp SQT
// ├─────────────┼─────────────┼─────────────┼─────────────┼─────────────┼─────────────┤   ├─────────────┼─────────────┼─────────────┼─────────────┼─────────────┤─────────────┼
       &kp WNB_LT        &kp Z       &kp X           &kp C       &kp D           &kp V            &kp K          &kp H        &kp COMMA   &kp PERIOD    &kp SLASH    &caps_word
// ├─────────────┼─────────────┼─────────────┼─────────────┼─────────────┼─────────────┤   ├─────────────┼─────────────┼─────────────┼─────────────┼─────────────┤─────────────┼
                                                    WC8            WC9           WC10                WC11          WC12          WC13
//                                           ╰─────────────┴──── ────────┴─────────────╯   ╰─────────────┴─────────────┴─────────────╯

            >;
