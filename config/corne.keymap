                numbers_layer_win {
			label = "NUM";
                        bindings = <
// ╭─────────────┬─────────────┬─────────────┬─────────────┬─────────────┬─────────────╮   ╭─────────────┬─────────────┬─────────────┬─────────────┬─────────────┬─────────────╮
     &kp ESC          &none         &none           &none       &kp WNB_LT     &kp WNB_GT     &hm F12 BSPC     &hm F7 N7      &hm F8 N8      &hm F9 N9  &NB_MINUS   &kp NB_FSLH
