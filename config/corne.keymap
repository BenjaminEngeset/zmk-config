#include <behaviors.dtsi>
#include <dt-bindings/zmk/keys.h>
#include <dt-bindings/zmk/bt.h>
#include "keys_nb_osx.h"
#include "keys_nb_win.h"

#define DEFAULT_L 0
#define SYMBOLS_L 1
#define ARROWS_L  2
#define NUMBERS_L 3
#define DEFAULT_L_WIN 4
#define SYMBOLS_L_WIN 5
#define ARROWS_L_WIN  6
#define NUMBERS_L_WIN 7

        &caps_word {
    continue-list = <NB_UNDERSCORE NB_MINUS WNB_UNDERSCORE WNB_MINUS>;
};

/ {

	behaviors {
        hm: homerow_mods {
    compatible = "zmk,behavior-hold-tap";
    label = "HOMEROW MODS";
    #binding-cells = <2>;
    tapping-term-ms = <250>;
    flavor = "tap-preferred";
    bindings = <&kp>, <&kp>;
                };
        thb: thumb_mods {
    compatible = "zmk,behavior-hold-tap";
    label = "THUMB MODS";
    #binding-cells = <2>;
    tapping-term-ms = <300>;
    quick-tap-ms = <200>;
    flavor = "hold-preferred";
    bindings = <&kp>, <&kp>;
                };
thb2: thumb_mods_layer {
        compatible = "zmk,behavior-hold-tap";
        label = "THUMB MODS2";
        #binding-cells = <2>;
        tapping-term-ms = <300>;
        quick-tap-ms = <200>;
        flavor = "hold-preferred";
        bindings = <&mo>, <&kp>;
        };
    };

        keymap {
                compatible = "zmk,keymap";

                default_layer {
            #define B13  &hm LCTRL   A  
            #define B14  &hm LCTRL  R
            #define B15  &hm LALT   S
            #define B16  &hm LCMD  T

            #define B19  &hm RCMD  N
            #define B20  &hm RALT  E
            #define B21  &hm RCTRL   I
            #define B22  &hm RCTRL   O
            #define C10 &thb LSHFT ENTER
            #define C11 &thb LSHFT BSPC
            #define C12 &hm LC(LS(LALT)) SPACE
            #define C8 &thb2 ARROWS_L ESC
            #define C9 &thb2 SYMBOLS_L SPACE
            #define C13 &thb2 NUMBERS_L DEL


			label = "DEF";
                       bindings = <
// ╭─────────────┬─────────────┬─────────────┬─────────────┬─────────────┬─────────────╮   ╭─────────────┬─────────────┬─────────────┬─────────────┬─────────────┬─────────────╮
     &kp WNB_SQT       &kp Q          &kp W           &kp F      &kp P           &kp B           &kp J           &kp L           &kp U       &kp Y       &kp  SEMI    &kp LBKT
// ├─────────────┼─────────────┼─────────────┼─────────────┼─────────────┼─────────────┤   ├─────────────┼─────────────┼─────────────┼─────────────┼─────────────┼─────────────┤
       &kp TAB          B13         B14             B15         B16             &kp G            &kp M          B19           B20           B21          B22         &kp SQT
// ├─────────────┼─────────────┼─────────────┼─────────────┼─────────────┼─────────────┤   ├─────────────┼─────────────┼─────────────┼─────────────┼─────────────┤─────────────┼
       &kp WNB_LT        &kp Z       &kp X           &kp C       &kp D           &kp V            &kp K          &kp H        &kp COMMA   &kp PERIOD    &kp SLASH    &caps_word
// ├─────────────┼─────────────┼─────────────┼─────────────┼─────────────┼─────────────┤   ├─────────────┼─────────────┼─────────────┼─────────────┼─────────────┤─────────────┼
                                                    C8            C9           C10                C11          C12          C13
//                                           ╰─────────────┴──── ────────┴─────────────╯   ╰─────────────┴─────────────┴─────────────╯

            >;
                };  

                symbols_layer {
            #define B32  &hm LCTRL   LEFT
            #define B33  &hm LCTRL  DOWN
            #define B34  &hm LALT   UP
            #define B35  &hm LCMD  RIGHT   

            #define B36  &hm RCMD  WNB_LT
            #define B37  &hm RALT   WNB_LEFT_BRACE
            #define B38  &hm RCTRL    WNB_RIGHT_BRACE
            #define B39  &hm RCTRL   WNB_GT
			label = "SYMB";
                        bindings = <                                                                               
